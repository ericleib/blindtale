<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_material_dark"
    tools:context=".MainActivity">

    <TextView android:text="@string/app_name" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:gravity="center"
        android:textSize="40dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tale_spinner"
        android:textColor="@color/text"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:spinnerMode="dropdown" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/play_button"
        android:textColor="@color/text"
        android:layout_below="@+id/tale_spinner"
        android:backgroundTint="@color/play_bg"
        android:onClick="play"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Tales"
        android:id="@+id/download_button"
        android:textColor="@color/text"
        android:layout_below="@+id/play_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exit_button"
        android:textColor="@color/text"
        android:layout_below="@+id/download_button"
        android:onClick="exitApp"/>

</RelativeLayout>
